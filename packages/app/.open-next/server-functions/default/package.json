{
  "name": "devops",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.150",
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "3.5.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build": "concurrently \"bun run build:function\" \"bun run build:app\"",
    "build:app": "bun run --cwd packages/app build",
    "build:function": "bun run --cwd packages/function build",
    "db:generate": "bun run --cwd packages/core db:generate",
    "db:migrate": "bun run --cwd packages/core db:migrate",
    "db:push": "bun run --cwd packages/core db:push",
    "db:studio": "bun run --cwd packages/core db:studio",
    "dev": "concurrently \"bun run dev:function\" \"bun run dev:app\"",
    "dev:app": "bun run --cwd packages/app dev",
    "dev:function": "bun run --cwd packages/function dev",
    "format": "bunx prettier --write .",
    "lint": "concurrently \"bun run lint:app\" \"bun run lint:function\" \"bunx prettier --check .\"",
    "lint:app": "bun run --cwd packages/app lint",
    "lint:function": "bun run --cwd packages/function lint",
    "prepare": "husky",
    "test": "concurrently \"bun run test:function\" \"bun run test:app\"",
    "test:app": "bun run --cwd packages/app test",
    "test:app:watch": "bun run --cwd packages/app test --watch",
    "test:function": "bun run --cwd packages/function test",
    "test:function:watch": "bun run --cwd packages/function test:watch",
    "test:watch": "concurrently \"bun run test:function:watch\" \"bun run test:app:watch\""
  },
  "dependencies": {
    "immer": "^10.1.1",
    "sst": "3.17.8"
  }
}
